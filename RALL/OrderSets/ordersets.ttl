    [ fhir:title [ fhir:v "Retinal screening referral" ] ]
    [ fhir:title [ fhir:v "Foot risk assessment" ] ]
    [ fhir:title [ fhir:v "Lifestyle counseling & diabetes education" ] ]
  ) .

<PlanDefinition/bmj-orderset-cvd> a fhir:PlanDefinition ;
