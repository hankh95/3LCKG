@prefix fhir:  <http://hl7.org/fhir/> .

<PlanDefinition/bmj-orderset-initial> a fhir:PlanDefinition ;
  fhir:status [ fhir:v "active" ] ;
  fhir:title [ fhir:v "Order Set: Initial Labs & Screening" ] ;
  fhir:action (
    [ fhir:title [ fhir:v "Labs: HbA1c, fasting lipids, eGFR, urine albumin/creatinine" ] ]
